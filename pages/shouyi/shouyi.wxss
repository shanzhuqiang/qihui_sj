.shouyiWrap{
}
.shouyiWrap .topBox{
  padding: 20rpx 30rpx;
  background: #f8f8f8;
}
.shouyiWrap .topBox .question{
  width: 24rpx;
  height: 25rpx;
  display: inline-block;
  margin-left: 6rpx;
}
.shouyiWrap .topBox .halfBox{
	/* width: 340rpx; */
	height: 144rpx;
	background-color: #fff;
	box-shadow: 0 7rpx 8rpx 1rpx 
		rgba(0, 0, 0, 0.05);
	border-radius: 10rpx;
  padding: 30rpx 0 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
.shouyiWrap .topBox .halfBox .price{
	font-family: PingFangSC-Semibold;
	font-size: 36rpx;
  height: 40rpx;
