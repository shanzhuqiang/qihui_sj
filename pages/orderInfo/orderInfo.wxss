.orderInfoWrap .lastRow{
  padding: 38rpx 30rpx;
	font-family: PingFangSC-Regular;
	color: #333333;
	font-size: 26rpx;
	border-bottom: solid 20rpx #f8f8f8;
  display: flex;
  align-items: left;
  justify-content: space-around;
  flex-direction: column;
}
.orderInfoWrap .lastRow .rightVal{
  display: flex;
  align-items: left;
  justify-content: space-around;
  flex-direction: column;
  float: right;
  max-width: 580rpx;
}
.orderInfoWrap .bottomBox{
  height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 0 30rpx;
  background: #fff;
	box-shadow: 0px -3rpx 4rpx 0 rgba(0, 0, 0, 0.02);
}
.orderInfoWrap .bottomBox .btnBox{
	height: 64rpx;
  line-height: 64rpx;
  text-align: center;
	border-radius: 10rpx;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
  padding: 0 20rpx;
  float: right;
  margin: 28rpx 0 0 20rpx;
	border: solid 1rpx #f46524;
	color: #f46524;
}
.orderInfoWrap .bottomBox .btnBox.colorBtn{
	border: solid 1rpx #ff603e;
	color: #ff603e;
}