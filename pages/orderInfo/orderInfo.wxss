}
.orderInfoWrap .firstRow{
  height: 100rpx;
  line-height: 100rpx;
	font-family: PingFangSC-Regular;
	font-size: 36rpx;
	color: #323333;
  padding: 0 30rpx;
  border-bottom: 20rpx solid #f8f8f8;
  background: #fff;
}
.orderInfoWrap .firstRow .shopName{
  float: right;
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #999;
  text-align: right;
  width: 400rpx;
}
.orderInfoWrap .itemRow .itemOne{
  float: right;
  width: 160rpx;
	font-family: PingFangSC-Semibold;
	font-size: 26rpx;
	color: #363636;
}
.orderInfoWrap .itemRow .itemOne .num{
	font-family: PingFangSC-Regular;
}
.orderInfoWrap .itemRow .itemOne .price{
  float: right;
	font-family: PingFangSC-Semibold;
}
.orderInfoWrap .itemRow .itemOne .price2{
	font-family: PingFangSC-Semibold;
	font-size: 30rpx;
	color: #f73003;
}




