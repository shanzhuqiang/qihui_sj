/* pages/yue/yue.wxss */
page{
  height: 100%;
}
.shouyiWrap{
  height: 100%;
  background: #f8f8f8;
}
.shouyiWrap .topBox{
  padding: 20rpx 30rpx;
}
.shouyiWrap .topBox .itemRow{
  height: 140rpx;
  line-height: 140rpx;
  margin-top: 16rpx;
  background: #fff;
  position: relative;
  padding: 0 30rpx;
	box-shadow: 0 7rpx 8rpx 1rpx 
		rgba(0, 0, 0, 0.05);
	border-radius: 10rpx;
}
.shouyiWrap .topBox .itemRow .question{
  width: 24rpx;
  height: 25rpx;
  display: inline-block;
  margin-left: 6rpx;
}
.shouyiWrap .topBox .itemRow .price{
	font-family: PingFangSC-Semibold;
  height: 50rpx;
  line-height: 50rpx;
	font-size: 36rpx;
	color: #333333;
  padding-top: 30rpx;
}
.shouyiWrap .topBox .itemRow .yue{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
  height: 30rpx;
  line-height: 30rpx;
	color: #333;
  padding: 10rpx 0 0 10rpx;
}
.shouyiWrap .topBox .itemRow .btnBox{
	width: 152rpx;
	height: 64rpx;
  line-height: 64rpx;
  text-align: center;
	background-color: #f3475f;
	border-radius: 32rpx;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #fff;
  position: absolute;
  right: 30rpx;
  top: 40rpx;
}
.shouyiWrap .tabBox{
  height: 144rpx;
  padding: 0 30rpx;
}
.shouyiWrap .tabBox .tabItem{
  height: 144rpx;
  line-height: 144rpx;
  width: 48%;
	font-family: PingFangSC-Regular;
	font-size: 36rpx;
	color: #333;
  text-align: center;
	background-color: #ffffff;
	box-shadow: 0rpx 7rpx 8rpx 1rpx 
		rgba(0, 0, 0, 0.05);
	border-radius: 10rpx;
}